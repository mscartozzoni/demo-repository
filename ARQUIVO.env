# ============================================
# PORTAL CLINIC - ENVIRONMENT VARIABLES
# ============================================

# NODE ENVIRONMENT
NODE_ENV=production
PORT=8000

# ============================================
# DATABASE - MySQL
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=sua_senha_mysql_aqui
DB_NAME=portal_clinic
DB_CHARSET=utf8mb4

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ============================================
# WEBHOOK SECURITY
# ============================================
WEBHOOK_SECRET=portal_clinic_webhook_2025_secure_token
WEBHOOK_TIMEOUT=30000
ENABLE_WEBHOOK_VALIDATION=true

# ============================================
# EMAIL - Hostinger SMTP
# ============================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=contato@marcioplasticsurgery.com
SMTP_PASSWORD=sua_senha_hostinger_aqui
SMTP_FROM=Portal Clinic <contato@marcioplasticsurgery.com>

# Email Recipients
EMAIL_MEDICO=medico@marcioplasticsurgery.com
EMAIL_FINANCEIRO=financeiro@marcioplasticsurgery.com
EMAIL_SUPORTE=suporte@portal-clinic.com.br

# ============================================
# SMS - Twilio
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+551133334444

# ============================================
# WHATSAPP - Twilio
# ============================================
TWILIO_WHATSAPP_NUMBER=+14155238886
WHATSAPP_ENABLED=false

# ============================================
# WHATSAPP BUSINESS API (Alternativa)
# ============================================
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=xxxxxxxxxxxxxxxx
WHATSAPP_BUSINESS_ACCOUNT_ID=xxxxxxxxxxxxxxxx
WHATSAPP_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# AI ANALYSIS (Opcional)
# ============================================
ENABLE_AI_ANALYSIS=false
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AI_MODEL=gpt-3.5-turbo

# ============================================
# CORS & SECURITY
# ============================================
CORS_ORIGIN=http://localhost:3000,https://portal-clinic.com.br,https://horizons.hostinger.com
CORS_CREDENTIALS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=/var/www/portal-clinic-bot/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=https://portal-clinic.com.br
HORIZONS_URL=https://horizons.hostinger.com

# ============================================
# CHATWOOT (Opcional)
# ============================================
CHATWOOT_ENABLED=false
CHATWOOT_URL=https://chat.portal-clinic.com.br
CHATWOOT_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# SUPABASE (Se usar em vez de MySQL)
# ============================================
SUPABASE_ENABLED=false
SUPABASE_URL=https://xxxxxxxx.supabase.co
SUPABASE_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# REDIS (Cache - Opcional)
# ============================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# MONITORING & ANALYTICS
# ============================================
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================
# TIMEZONE
# ============================================
TZ=America/Sao_Paulo
